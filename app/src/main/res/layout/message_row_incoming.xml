<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profilePic"
        android:layout_marginStart="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/monkey_2"/>

    <TextView
        android:text="dfgdgdsgdgsdf"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:id="@+id/message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/incoming_message"
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toTopOf="@+id/message_profilePic"
        app:layout_constraintStart_toEndOf="@+id/message_profilePic"
        android:textColor="@color/white"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/message_when"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/message_content"
        app:layout_constraintStart_toEndOf="@+id/message_content"
        android:text="12:45"
        />

</androidx.constraintlayout.widget.ConstraintLayout>